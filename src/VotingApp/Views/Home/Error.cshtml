@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Error</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">An error occurred while processing your request.</h4>
                    <p class="mt-3">
                        If this problem persists, please check:
                    </p>
                    <ul>
                        <li>Database connection status</li>
                        <li>Application logs</li>
                        <li>Network connectivity</li>
                    </ul>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
